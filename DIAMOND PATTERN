#include<stdio.h>
void main()
{
int rows=5,r,c,k;
clrscr();
for(r=0;r<rows;r++)
{
for(c=0;c<2*(rows-r)-1;c++)
{
printf(" ");
}
for(k=0;k<2*r+1;k++)
{
printf("* ");
}
printf("\n");
}
for(r=1;r<rows;r++)
{
for(c=0;c<2*r+1;c++)
{
printf(" ");
}
for(k=0;k<2*(rows-r)-1;k++)
{
printf("* ");
}
printf("\n");
}
getch();
}
